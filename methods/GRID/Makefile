#==============================================================================
# Paths
#==============================================================================
DEMO_DIR = .

#==============================================================================
# Rules
#==============================================================================
.PHONY: all clean

all: 
	gcc -g -O3 $(DEMO_DIR)/main.cpp -o $(DEMO_DIR)/GRID $(DEMO_DIR)/stb_image.h -lm

clean:
	rm -f $(DEMO_DIR)/GRID ;
